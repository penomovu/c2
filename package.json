{
  "name": "hibp-password-checker",
  "version": "2.0.0",
  "description": "A modern web-based password leak checker similar to Have I Been Pwned",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev:server": "nodemon server.js", 
    "dev:client": "vite",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "vite build && npm run build:static",
    "build:static": "npm run clean:dist && npm run copy:assets",
    "copy:assets": "mkdir -p dist && cp -r public/* dist/ 2>/dev/null || true",
    "clean:dist": "rm -rf dist",
    "serve:static": "python3 -m http.server 8080 -d dist",
    "test": "jest",
    "lint": "eslint src/**/*.{js,jsx}",
    "lint:fix": "eslint src/**/*.{js,jsx} --fix", 
    "format": "prettier --write src/**/*.{js,jsx,css,html}",
    "preview": "vite preview"
  },
  "keywords": ["password", "security", "hibp", "k-anonymity", "web-app", "react"],
  "author": "Password Leak Checker", 
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "better-sqlite3": "^9.2.2", 
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "nodemon": "^3.0.2", 
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "concurrently": "^8.2.2",
    "workbox-cli": "^7.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  }
}
